---
import { projects } from "../data/projects";
---

<div
  id="projects"
  class="container-project flex-col mt-40 bg-white items-center flex w-full px-0"
>
  <div class="mx-auto max-w-2xl text-center w-full mb-2">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-4xl">
      Projects
    </h2>
    <p class="mt-2 text-lg leading-8 text-gray-600">
      Explore some of the projects I've done.
    </p>
  </div>

  <div class="carrousel-container w-full py-4 my-4 px-2 grid md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-5">
    {
      projects.map((project) => (
        <div
          class="card-carrousel flex-col mx-auto w-11/12 sm:px-3 rounded-lg flex shadow-lg  justify-center  my-5  bg-white "
          draggable="false"
        >
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer "
            class="bg-white"
          >
            <div class=" flex  justify-center mx-20 my-12  py-10 px-10  rounded-lg items-center bg-yellow-400">
              <img src={project.imgSrc} alt={project.name} class=" w-10 h-10" />
            </div>
          </a>
          <div class="bg-white rounded-lg py-12  flex justify-center items-center px-7  flex-col h-20 text-gray-900">
            <h2 class="text-sm text-gray-700 mt-2 text-center font-semibold">
              {project.name}
            </h2>
            <p class="text-xs my-3">{project.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  @media (max-width: 700px) {
    .carrousel-container {
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      overscroll-behavior-x: contain;
      overflow-x: auto;
      grid-auto-flow: column;
      gap: 3rem;
      padding: 2rem;
    }

    .carrousel-container::-webkit-scrollbar {
      display: none;
    }

    .card-carrousel {
      scroll-snap-align: start;
      width: 20rem;
    }
  }
</style>
